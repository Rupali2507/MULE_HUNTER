{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Node Schema",
  "description": "Account-level features generated by God Mode and consumed by AI, Analytics, and Visualization layers.",
  "type": "object",
  "required": [
    "node_id",
    "account_age_days",
    "balance",
    "in_out_ratio",
    "pagerank",
    "tx_velocity",
    "is_fraud"
  ],
  "properties": {
    "node_id": {
      "type": "string",
      "description": "Unique account identifier"
    },
    "account_age_days": {
      "type": "number",
      "description": "Age of account in days"
    },
    "balance": {
      "type": "number",
      "description": "Current account balance"
    },
    "in_out_ratio": {
      "type": "number",
      "description": "Total incoming amount / total outgoing amount"
    },
    "pagerank": {
      "type": "number",
      "description": "Graph centrality score"
    },
    "tx_velocity": {
      "type": "number",
      "description": "Number of transactions in last simulated hour"
    },
    "is_fraud": {
      "type": "integer",
      "enum": [0, 1],
      "description": "Ground truth label (1 = fraud, 0 = safe)"
    }
  }
}
